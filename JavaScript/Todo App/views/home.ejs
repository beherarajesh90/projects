<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css"
    />
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="../assets/css/style.css" />
    <script
      src="https://kit.fontawesome.com/4bd7ffec82.js"
      crossorigin="anonymous"
    ></script>
    <title>Todos</title>
  </head>
  <body>
    <div class="todo-container container-fluid">
      <h1 class="text-xl-center">TODO APP</h1>
      <form action="/todo/add-todo" method="POST">
        <div class="input-group mb-3">
          <input
            name="description"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
            placeholder="What do you need to do?"
            required
          />
        </div>
        <select
          class="form-select"
          name="category"
          aria-label="Default select example"
          required
        >
          <option selected>Choose category</option>
          <option value="school">School</option>
          <option value="work">Work</option>
          <option value="personal">Personal</option>
          <option value="others">Others</option>
        </select>
        <div class="date-picker container">
          <p>
            <input
              name="dueDate"
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
              id="datepicker"
              placeholder="Due Date"
              required
            />
          </p>
        </div>
        <p style="text-align: center">
          <button type="submit" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Add Task
          </button>
          <a class="delete">
            <button type="button" class="btn btn-danger">
              <i class="fa-solid fa-calendar-xmark"></i> Delete Tasks
            </button>
          </a>
        </p>
      </form>
      <hr />
      <% for(let task of tasks){%>
      <div class="form-check">
        <input
          class="form-check-input"
          type="checkbox"
          value=""
          id="<%=task._id%>"
          data-isdone="<%=task.isDone%>"
        />
        <label class="form-check-label" for="<%=task._id%>">
          <div>
            <h3><%= task.description %></h3>
            <!-- <a href="/todo/edit-task?id=<%=task._id  %>">Edit </a> -->
            <i class="fa-solid fa-calendar-days"></i>
            <%=task.dueDate%>
          </div>
          <div class="category"><span><%=task.category%></span></div>
        </label>
      </div>
      <hr />
      <%}%>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <script src="../assets/js/script.js"></script>
  </body>
</html>
